<Window x:Class="Example1Project.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Example1Project"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Closing="Window_Closing">
    <Canvas>
        <Border Canvas.Left="300" Canvas.Top="100" BorderBrush="Silver" Background="PaleGoldenrod" BorderThickness="1" CornerRadius="4">
            <TextBlock x:Name="lblCount" Text="0" TextAlignment="Center" FontSize="22" Width="200" Height="50"/>
        </Border>
        <Button x:Name="btnPlus" Canvas.Left="300" Canvas.Top="160" Width="80" Height="80" Content="+" FontSize="32" FontWeight="Bold" Click="btnPlus_Click"/>
        <Button x:Name="btnMinus" Canvas.Left="420" Canvas.Top="160" Width="80" Height="80" Content="-" FontSize="32" FontWeight="Bold" Click="btnMinus_Click"/>
    </Canvas>
</Window>
