<Window x:Class="CounterProject.CounterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CounterProject"
        mc:Ignorable="d"
        Title="CounterWindow" Height="450" Width="800" Closed="Window_Closed">
    <Canvas>
        <TextBox x:Name="txtCounter" Text="{Binding NewCounter.Number}" Canvas.Left="302" TextWrapping="Wrap" Canvas.Top="118" Height="72" Width="151" FontSize="24" VerticalAlignment="Center" HorizontalAlignment="Center" IsEnabled="False" TextAlignment="Center"/>
        <Button x:Name="btnPlus"  Content="+" Canvas.Left="180" Canvas.Top="262" Height="70" Width="104" FontSize="36" Command="{Binding PlusCommand}"/>
        <Button x:Name="btnMinus" Command="{Binding MinusCommand}" Content="-" Canvas.Left="453" Canvas.Top="262" Height="70" Width="105" FontSize="36"/>

    </Canvas>
</Window>
